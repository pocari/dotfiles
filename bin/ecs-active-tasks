#!/bin/sh

CLUSTER_NAME=$1

if [ -z $CLUSTER_NAME ]; then
  echo "クラスタ名を指定してください"
  exit 1
fi


TASKS=$(aws ecs list-tasks --cluster $CLUSTER_NAME | jq -r '.taskArns | join(" ")')
aws ecs describe-tasks \
  --tasks $TASKS \
  --cluster $CLUSTER_NAME \
| jq -r '.tasks[] | (.taskArn + "\t" + .group)' \
| sed 's#^.*/##g'
