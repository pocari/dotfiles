# vim: ft=sh

# ログインシェル起動時にzshrcより前に読み込まれる
# zshでシェルスクリプト書くこと無いので、そこで読み込まれなくて良いものはここに書く。

autoload -U compinit
compinit -C

# rbenv
if [ -d ${HOME}/.rbenv ] ; then
  PATH=${HOME}/.rbenv/bin:/usr/local/bin:${PATH}
  export PATH
  eval "$(rbenv init -)"
fi

# nodenv
if [ -d ${HOME}/.nodenv ] ; then
  PATH=${HOME}/.nodenv/bin:$PATH
  eval "$(nodenv init -)"
fi

# rsvm
if [ -d ${HOME}/.rsvm ] ; then
  PATH=${HOME}/.cargo/bin:$PATH
  source ${HOME}/.rsvm/rsvm.sh
fi
