snippet fornormal
abbr for ${1} := 0; ${2} < len(${3}); ${4}-- { ${5} }
options word
	for ${1:i} := 0; ${2:i} < len(${3}); ${4:i}++ {
		${5}
	}

snippet forreverse
abbr for ${1} := len(${2}) - 1; ${3} >= 0; ${4}-- { ${5} }
options word
	for ${1:i} := len(${2}) - 1; ${3:i} >= 0; ${4:i}-- {
		${5}
	}

snippet ifepanic
abbr if ${1} != nil { panic(${2} } ${3}
options word
        if ${1:err} != nil {
		panic(${2:err})
	}
        ${3}

