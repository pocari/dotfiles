	path = .gitconfig.local
[core]
	editor = vi -u NONE -c 'set nocompatible'
[push]
	default = simple
[diff]
	algorithm = histogram
	tool = vimdiff
	compactionHeuristic = true

[mergetool "p4merge"]
	path = /opt/homebrew-cask/Caskroom/p4merge/2014.3-1007540/p4merge.app/Contents/MacOS/p4merge
	keepTemporaries = false
	trustExitCode = false
